{
  "name": "@itsfadnis/jsonapi-client",
  "version": "3.0.2",
  "main": "dist/model.js",
  "types": "dist/model.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint **/*.ts --fix",
    "test": "eslint **/*.ts && jest && yarn build && bundlesize",
    "prepare": "yarn build"
  },
  "author": "Nikhil Fadnis",
  "license": "ISC",
  "description": "A convenient module to consume a jsonapi service",
  "dependencies": {
    "isomorphic-fetch": "^3.0.0",
    "jsonapi-serializer": "git+https://github.com/itsfadnis/jsonapi-serializer.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/jest": "^29.5.13",
    "@types/jsonapi-serializer": "^3.6.8",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "bundlesize": "^0.18.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "nan": "2.18.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/model.js",
      "maxSize": "13 kB",
      "compression": "none"
    },
    {
      "path": "./dist/http-adapter.js",
      "maxSize": "3.5 kB",
      "compression": "none"
    },
    {
      "path": "./dist/jsonapi-error.js",
      "maxSize": "3.5 kB",
      "compression": "none"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/itsfadnis/jsonapi-client.git"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "collectCoverage": true,
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "moduleNameMapper": {
      "jsonapi-serializer/lib/serializer": "<rootDir>/test/__mocks__/serializer.ts",
      "jsonapi-serializer/lib/deserializer": "<rootDir>/test/__mocks__/deserializer.ts"
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
